{
  "name": "tapedeck-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "pretty-all": "npx prettier --write ./function/**/*.js",
    "request:deploy": "FN=request ./pkg.sh && FN=request ./upload.sh",
    "process-ddb-stream:deploy": "FN=process-ddb-stream ./pkg.sh && FN=process-ddb-stream ./upload.sh",
    "archive2:deploy": "FN=archive2 ./pkg.sh && FN=archive2 ./upload.sh",
    "process-s3:deploy": "FN=process-s3 ./pkg.sh && FN=process-s3 ./upload.sh",
    "deploy": "npm run request:deploy && npm run process-ddb-stream:deploy && npm run archive2:deploy && npm run process-s3:deploy"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.9",
    "aws-sdk": "^2.892.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "typescript": "4.0.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2020": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "strict": "error",
      "semi": "error",
      "prettier/prettier": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "quoteProps": "consistent"
  }
}
