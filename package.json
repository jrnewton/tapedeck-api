{
  "name": "tapedeck-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "upload-hello": "node upload.js -f tapedeck-hello -s function/hello/",
    "upload-archive": "node upload.js -f tapedeck-hello -s function/archive/",
    "lint": "eslint .",
    "pretty-all": "npx prettier --write ./function/**/*.js"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.4.1",
    "adm-zip": "^0.5.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.9",
    "mocha": "^8.2.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2020": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "strict": "error",
      "semi": "error",
      "prettier/prettier": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "quoteProps": "consistent"
  }
}
